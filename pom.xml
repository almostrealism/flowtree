<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.almostrealism</groupId>
	<artifactId>FlowTree</artifactId>
	<version>0.3-rc</version>


	<properties>
		<!-- Adapt this to a version found on http://central.maven.org/maven2/org/eclipse/jetty/jetty-maven-plugin/ -->
		<jettyVersion>9.4.6.v20170531</jettyVersion>
	</properties>

	<!-- Output to jar format -->
	<packaging>jar</packaging>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>persistence</source>
								<source>messaging</source>
								<source>src</source>
								<source>ui</source>
								<source>libdohj/core/src/main/java</source>
								<source>java-smartcolors/core/src/main/java</source>
								<source>java-stratum/stratum-protocol/src/main/java</source>
								<source>java-stratum/stratum-tools/src/main/java</source>
								<source>ethereumj/ethereumj-core/src/main/java</source>
								<source>ethereumj/ethereumj-core/src/main/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>io.almostrealism</groupId>
			<artifactId>TreeView</artifactId>
			<version>0.2-rc</version>
		</dependency>
		
		<dependency>
			<groupId>io.almostrealism</groupId>
			<artifactId>GraphPersist</artifactId>
			<version>0.2-rc</version>
		</dependency>
		
		<dependency>
			<groupId>org.almostrealism</groupId>
			<artifactId>Common</artifactId>
			<version>0.5-rc</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-lang3 -->
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>3.6</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-collections4 -->
